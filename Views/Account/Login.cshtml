@model StockManagement.Models.ViewModels.AuhtModels.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="text-center mb-4">Giriş Yap</h3>

                    <form asp-action="Login" method="post">
                        <div class="form-group mb-3">
                            <label for="email">E-posta</label>
                            <input type="email" name="email" class="form-control" id="email" required placeholder="E-posta adresiniz" />
                        </div>

                        <div class="form-group mb-3">
                            <label for="password">Şifre</label>
                            <input type="password" name="password" class="form-control" id="password" required placeholder="Şifreniz" />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
                        </div>
                    </form>

                    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                    {
                        <div class="alert alert-danger mt-3 text-center">@ViewBag.ErrorMessage</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>