@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="container mt-4">
    <h2 class="text-center mb-5 fw-bold">Sipariş Paneli</h2>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <h5 class="card-title fw-semibold">Ürüne Göre Siparişler</h5>
                    <p class="card-text text-muted">
                        Seçilen üründen satın alan müşterilerin isimleri ve adreslerini görüntüleyin.
                    </p>
                    <button type="button" class="btn btn-outline-primary w-100" onclick="loadProductCustomers()">
                         Detayları Gör
                    </button>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <h5 class="card-title fw-semibold">1 Adetten Fazla Ürün Olan Siparişler</h5>
                    <p class="card-text text-muted">
                        Birden fazla ürün içeren siparişleri ve ilgili müşteri bilgilerini inceleyin.
                    </p>
                    <button type="button" class="btn btn-outline-primary w-100" onclick="loadMultiQuantityOrders()">
                         Detayları Gör
                    </button>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <h5 class="card-title fw-semibold">Adresi Farklı Olan Siparişler</h5>
                    <p class="card-text text-muted">
                        Fatura adresi ile teslimat adresi farklı olan müşterileri listeleyin.
                    </p>
                    <button type="button" class="btn btn-outline-primary w-100" onclick="loadDifferentAddressOrders()">
                         Detayları Gör
                    </button>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <h5 class="card-title fw-semibold">TLS Siparişleri</h5>
                    <p class="card-text text-muted">
                        TLS adlı müşterinin tüm sipariş kayıtlarını görüntüleyin.
                    </p>
                    <button type="button" class="btn btn-outline-primary w-100" onclick="loadTLSOrders()">
                         Detayları Gör
                    </button>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <h5 class="card-title fw-semibold">İstanbul Siparişleri</h5>
                    <p class="card-text text-muted">
                        İstanbul adresli siparişlerin toplam sayısını ve detaylarını görüntüleyin.
                    </p>
                    <button type="button" class="btn btn-outline-primary w-100" onclick="loadIstanbulOrders()">
                         Detayları Gör
                    </button>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <h5 class="card-title fw-semibold">Siparişlerim</h5>
                    <p class="card-text text-muted">
                        Kendi siparişlerinizi görüntüleyin ve detaylarını inceleyin.
                    </p>
                    <button type="button" class="btn btn-outline-secondary w-100" onclick="loadMyOrders()">
                         Siparişlerimi Gör
                    </button>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <h5 class="card-title fw-semibold">Tüm Siparişler</h5>
                    <p class="card-text text-muted">
                        Sistemdeki tüm siparişlerin listesini ve genel durumlarını görüntüleyin.
                    </p>
                    <a href="/Order/GetAllOrders" class="btn btn-primary w-100">Siparişleri Gör</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="modalContainer"></div>

@section Scripts {
    <script>
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/orderHub")
            .build();

        connection.start().then(function () {
            console.log("SignalR Connected");
        }).catch(function (err) {
            console.error(err.toString());
        });

        connection.on("NewOrderCreated", function (order) {
            showOrderNotification(order);
        });

        function showOrderNotification(order) {
            const notification = $(`
                <div class="alert alert-success alert-dismissible fade show position-fixed" style="top: 20px; right: 20px; z-index: 9999; min-width: 300px;">
                    <strong>Yeni Sipariş!</strong><br>
                    Sipariş No: ${order.orderNo}<br>
                    Müşteri: ${order.customerName}<br>
                    Tutar: ${order.totalPrice.toLocaleString('tr-TR', {style: 'currency', currency: 'TRY'})}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `);
            $('body').append(notification);
            
            setTimeout(function() {
                notification.alert('close');
            }, 5000);
        }

        function loadProductCustomers() {
            $.get('@Url.Action("ProductCustomers", "Order")', function(data) {
                $('#modalContainer').html(data);
                $('#productCustomersModal').modal('show');
            }).fail(function() {
                alert('Veriler yüklenirken bir hata oluştu.');
            });
        }

        function loadMultiQuantityOrders() {
            $.get('@Url.Action("MultiQuantityOrders", "Order")', function(data) {
                $('#modalContainer').html(data);
                $('#multiQuantityOrdersModal').modal('show');
            }).fail(function() {
                alert('Veriler yüklenirken bir hata oluştu.');
            });
        }

        function loadDifferentAddressOrders() {
            $.get('@Url.Action("DifferentAddressOrders", "Order")', function(data) {
                $('#modalContainer').html(data);
                $('#differentAddressOrdersModal').modal('show');
            }).fail(function() {
                alert('Veriler yüklenirken bir hata oluştu.');
            });
        }

        function loadTLSOrders() {
            $.get('@Url.Action("TLSOrders", "Order")', function(data) {
                $('#modalContainer').html(data);
                $('#tlsOrdersModal').modal('show');
            }).fail(function() {
                alert('Veriler yüklenirken bir hata oluştu.');
            });
        }

        function loadIstanbulOrders() {
            $.get('@Url.Action("IstanbulOrders", "Order")', function(data) {
                $('#modalContainer').html(data);
                $('#istanbulOrdersModal').modal('show');
            }).fail(function() {
                alert('Veriler yüklenirken bir hata oluştu.');
            });
        }

        function loadMyOrders() {
            $.get('@Url.Action("MyOrders", "Order")', function(data) {
                $('#modalContainer').html(data);
                $('#myOrdersModal').modal('show');
            }).fail(function() {
                alert('Veriler yüklenirken bir hata oluştu.');
            });
        }
    </script>
}