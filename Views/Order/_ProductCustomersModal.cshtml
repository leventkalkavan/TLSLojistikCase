@model IEnumerable<StockManagement.Models.ViewModels.OrderDetailModels.ProductCustomersViewModel>

<div class="modal fade" id="productCustomersModal" tabindex="-1" aria-labelledby="productCustomersModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="productCustomersModalLabel">Ürüne Göre Siparişler</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>
            <div class="modal-body p-4">
                @if (Model.Any())
                {
                    <div class="row g-4">
                        @foreach (var product in Model)
                        {
                            <div class="col-lg-6">
                                <div class="card h-100 shadow-sm border-0">
                                    <div class="card-header bg-light border-0">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <h6 class="mb-0 fw-bold text-danger">@product.StockName</h6>
                                            <span class="badge bg-secondary">@product.OrderCount Sipariş</span>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <p class="mb-3 text-muted small">Bu üründen sipariş veren müşteriler:</p>
                                        @foreach (var customer in product.Customers)
                                        {
                                            <div class="border rounded p-3 mb-3 bg-light">
                                                <div class="d-flex justify-content-between align-items-start mb-2">
                                                    <span class="fw-bold text-dark">@customer.CustomerName</span>
                                                </div>
                                                <div class="small">
                                                    <strong class="text-muted">Teslimat Adresleri:</strong>
                                                    <ul class="list-unstyled mt-1 mb-0">
                                                        @foreach (var address in customer.Addresses)
                                                        {
                                                            <li class="text-muted small">
                                                                <i class="fas fa-map-marker-alt text-danger me-1"></i> @address
                                                            </li>
                                                        }
                                                    </ul>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <div class="text-muted">
                            <i class="fas fa-box fa-3x mb-3"></i>
                            <h5>Henüz bu kriterde sipariş bulunmuyor</h5>
                            <p class="mb-0">Birden fazla siparişe sahip ürünler burada görüntülenecek</p>
                        </div>
                    </div>
                }
            </div>
            <div class="modal-footer bg-light">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>